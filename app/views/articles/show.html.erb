<div>
    <h1><%= @article.title %></h1>

    <p><%= @article.body %></p>
</div>


<div>
    <button><%= link_to "Edit Article", edit_article_path(@article) %></button>
    <button>
    <%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %>
    </button>
    <button><%= link_to "Back to Homepage", root_path %></button>
</div>

<div>
<%= render @article.comments %>
</div>


<div>
<h2>Add a comment:</h2>
<%= render 'comments/form' %>
</div>